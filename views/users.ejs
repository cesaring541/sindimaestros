<!DOCTYPE html>
<html>
  <head>
    <title>Usuarios | Sindimaestros</title>

    <% include ./partials/head.ejs %>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <% include ./partials/nav-header.ejs %>

      <% include ./partials/left-column.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Gestionar Usuarios
          </h1>
        </section>

        <section class="content">
          <div class="row">
            <div class="col-md-3 col-sm-4 col-xs-5">
              <div class="contains">
                <span class="btn bg-green" id="add-user"> <i class="fa fa-plus-circle fa-5x pull-left" href="#"></i> Agregar usuario </span>
              </div>
            </div>
            <div class="col-md-3 col-sm-4 col-xs-5">
              <div class="contains">
                <span class="list-users btn btn-primary"><i class="fa fa-reorder fa-5x pull-left"></i> Listar usuarios </span>
              </div>
            </div>
          </div>

          <!-- Alertas -->
          <% if (message.length > 0) { %>
            <div class="alert alert-danger" style="margin-top: 10px;"><%= message %></div>
          <% } %>

          <div class="box-body">

            <!-- Tabla de usuarios -->
            <div class="table-users fresh-table">
              <div class="toolbar">
                <!--button id="alertBtn" class="btn btn-default">Botón de Alerta</button-->
              </div>

              <table id="fresh-table" class="table">
                <thead>
                  <th data-field="name">Nombre </th>
                  <th data-field="lastname">Apellidos </th>
                  <th data-field="email">Email </th>
                  <th data-field="role">Rol </th>
                  <th data-field="status">Estado </th>
                  <th data-field="actions" data-formatter="operateFormatter" data-events="operateEvents">Acciones </th>
                </thead>
                <tbody>
                  <% if (objUser != undefined) { %>
                  <% objUser.forEach(function(objUsr) { %>
                  <% if (objUsr.role != "Administrador") { %>
                  <tr class="<%= objUsr._id %>" style="text-align:center;">
                    <td><%= objUsr.local.code %></td>
                    <td><%= objUsr.local.firstname %> <%= objUsr.local.lastname %></td>
                    <td><%= objUsr.local.email %> </td>
                    <td><%= objUsr.local.role %></td>
                    <% if (objUsr.local.status === "Activo") { %>
                      <td><i class="fa fa-circle text-success"></i>  <%= objUsr.local.status %></td>
                    <% } else { %>
                      <td><i class="fa fa-circle text-danger"></i>  <%= objUsr.local.status %></td>
                    <% } %>
                  </tr>
                  <% } %>
                  <% }); %>
                  <% } else { %>
                  <td colspan="" rowspan="" headers="">Para crear un usuario, dé click en el boton <span class="fa fa-plus-circle"></span></td>
                  <% } %>
                </tbody>
              </table>
            </div>

            <!-- Formulario agregar usuario -->
            <form class="form-user" id="formUser" enctype="multipart/form-data" action="createUser" method="POST" >
              <div id="form-add-user" class="col-md-12" style="display: none;">
                <div>
                  <label for=""><h2>Ingrese el nuevo usuario</h2></label>
                </div>

                <section class="col-md-6 ">
                  <div class="form-group" id="role">
                    <label for="bio">Rol:</label><br>
                    <select class="form-control" type="brand" id="roles_list" name="role" required></select>
                  </div>

                  <div class="form-group" id="firstname">
                    <label for="bio">Nombre:</label><br>
                    <input class="form-control" type="text" name="firstname" value="" required>
                  </div>

                  <div class="form-group" id="email">
                    <label for="bio">Email:</label><br>
                    <input id="Email" class="form-control" type="email" name="email" placeholder="usuario@ejemplo.com" required>
                    <p class="bg-warning" style="display: none;" id="msgEmail">Este correo ya se encuentra en uso por favor cambiarlo</p>
                  </div>

                 

                  <div class="form-group" id="attendant" style="display: none;">
                    <div class="form-group" id="nameAttendant1">
                      <label for="bio">Nombres y apellidos del acudiente 1:</label><br>
                      <input class="form-control" type="text" name="nameAttendant1" value="" >
                    </div>
                    <div class="form-group" id="phoneAttendant1">
                      <label for="bio">Teléfono fijo del acudiente 1:</label><br>
                      <input class="form-control" type="number" name="phoneAttendant1" value="" >
                    </div>

                    <div class="form-group" id="nameAttendant2">
                      <label for="bio">Nombres y apellidos del acudiente 2:</label><br>
                      <input class="form-control" type="text" name="nameAttendant2" value="" >
                    </div>
                    <div class="form-group" id="phoneAttendant2">
                      <label for="bio">Teléfono fijo del acudiente 2:</label><br>
                      <input class="form-control" type="number" name="phoneAttendant2" value="" >
                    </div>
                    
                    
                  </div>

                  <div class="form-group">
                    <label for="bio">Estado:</label><br>
                    <select class="form-control" type="brand" name="status">
                      <option value="Activo">Activo</option>
                      <option value="Inactivo">Inactivo</option>
                    </select>
                  </div>

                </section>

                <section class="col-md-6">
                  
                  <div class="form-group" id="code">
                    <label for="bio">Documento de identidad:</label><br>
                    <input class="form-control" type="number" name="code" value="" required>
                  </div>

                  <div class="form-group" id="lastname">
                    <label for="bio">Apellido:</label><br>
                    <input class="form-control" type="text" name="lastname" value="" required>
                  </div>

                  <div class="form-group" id="password">
                    <label for="bio">Contraseña:</label><br>
                    <input class="form-control" type="password" name="password" value="" required>
                    <div id="pswd_info" style="display: none;">
                      <h4>La contraseña debería cumplir con los siguientes requerimientos:</h4>
                      <p id="length">Debería tener <strong>8 carácteres</strong> como mínimo</p>
                      <p id="letter">Al menos debería tener <strong>una letra minúscula</strong></p>
                      <p id="capital">Al menos debería tener <strong>una letra mayúscula</strong></p>
                      <p id="number">Al menos debería tener <strong>un número</strong></p>
                      <p id="symbol">Al menos debería tener <strong>un símbolo</strong></p>
                    </div>
                  </div>
                  
                  <div class="form-group" id="attendant2" style="display: none;">
                    <div class="form-group" id="addressAttendant1">
                      <label for="bio">Dirección del acudiente 1:</label><br>
                      <input class="form-control" type="text" name="addressAttendant1" value="" >
                    </div>

                    <div class="form-group" id="cellphoneAttendant1">
                      <label for="bio">Teléfono celular del acudiente 1:</label><br>
                      <input class="form-control" type="number" name="cellphoneAttendant1" value="" >
                    </div>

                    <div class="form-group" id="addressAttendant2">
                      <label for="bio">Dirección del acudiente 2:</label><br>
                      <input class="form-control" type="text" name="addressAttendant2" value="" >
                    </div>

                    <div class="form-group" id="cellphoneAttendant2">
                      <label for="bio">Teléfono celular del acudiente 2:</label><br>
                      <input class="form-control" type="number" name="cellphoneAttendant2" value="" >
                    </div>
                  </div>
                  

                  

                  <!--<div>
                    <label for="bio">Descripcion del curso:</label><br>
                    <input class="form-date btn btn-success btn-block"  value="cargar archivo"></input>
                  </div>-->
                </section>

                <button type="submit" class="btn btn-primary btn-block btn-flat">Registrar</button>
                <!-- El botón cancelar se deja como input para que no haga efecto sobre el formulario -->
                <input type="button" class="list-users btn btn-danger btn-block btn-flat" value="Cancelar"></input>
              </div>
            </form>

