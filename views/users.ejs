                  <div class="form-group" id="mod_attendant2" style="display: none;">
                    <div class="form-group" id="addressAttendant1">
                      <label for="bio">Dirección del acudiente 1:</label><br>
                      <input id="mod_addressAttendant1" class="form-control" type="text" name="addressAttendant1" value="" >
                      <input id="idAttendant1" class="form-control" type="text" name="idAttendant1" value="" style="display: none;">
                    </div>

                    <div class="form-group" id="cellphoneAttendant1">
                      <label for="bio">Teléfono celular del acudiente 1:</label><br>
                      <input id="mod_cellphoneAttendant1" class="form-control" type="number" name="cellphoneAttendant1" value="" >
                    </div>

                    <div class="form-group" id="addressAttendant2">
                      <label for="bio">Dirección del acudiente 2:</label><br>
                      <input id="mod_addressAttendant2" class="form-control" type="text" name="addressAttendant2" value="" >
                      <input id="idAttendant2" class="form-control" type="text" name="idAttendant2" value="" style="display: none;">
                    </div>

                    <div class="form-group" id="cellphoneAttendant2">
                      <label for="bio">Teléfono celular del acudiente 2:</label><br>
                      <input id="mod_cellphoneAttendant2" class="form-control" type="number" name="cellphoneAttendant2" value="" >
                    </div>
                  </div>

                  <!--<div>
                    <label for="bio">Descripcion del curso:</label><br>
                    <input class="form-date btn btn-success btn-block"  value="cargar archivo"></input>
                  </div>-->
                </section>

                <input id="button_update" type="submit" class="modify-user btn btn-primary btn-block btn-flat" value="Actualizar usuario"></input>
                <!-- El botón cancelar se deja como input para que no haga efecto sobre el formulario -->
                <input type="button" class="list-users btn btn-danger btn-block btn-flat" value="Cancelar"></input>
              </div>
            </form>
          </div>
        </section>

