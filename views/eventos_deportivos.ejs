<!DOCTYPE html>
<html>
  <head>
    <title>Eventos deportivos | Sindimaestros</title>
    <% include ./partials/head.ejs %>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

      <% include ./partials/nav-header.ejs %>

      <% include ./partials/left-column.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>Gestionar Eventos Deportivos</h1>
        </section>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        
        <!-- Main content -->
        <section class="content">
            <div class="row">

            <!-- Panel de Creacion de Eventos -->
              <div class="col-md-6">
                <div class="box box-success">
                  <div class="box-header with-border label-success" align="center">
                    <h3 class="box-title"><b>CREAR EVENTO DEPORTIVO</b></h3>          
                  </div>
                  <div class="box-body">
                   <form role="form" action="new-sportEvent" method="POST">
                      <div class="row">
                        <div class="col-md-6">
                          
                          <div class="form-group">
                            <label for="secondNameAffiliate">Nombre del Evento</label>
                            <input class="form-control" type="text" placeholder="Nombre del Evento" name="nameEvent">
                          </div>

                          <div class="form-group">
                            <label>Fecha de inicio del Evento</label>
                            <div class="date wideForm">
                              <input type="date" class="form-control pull-right" id="datepicker" placeholder="dd/mm/aaaa" name="startDate">
                            </div>
                          </div>

                          <div class="form-group">
                            <label>Tipo de Participacion</label>
                            <select class="form-control select2 wideForm" name="typeOfParticipation">
                              <option value="Individual">Individual</option>
                              <option value="Grupal">Grupal</option>
                            </select>
                          </div>
                            
                        </div>

                        <div class="col-md-6">
                            
                          <div class="form-group">
                            <label>Categoría</label>
                            <select class="form-control select2 wideForm" name="category">
                              <option value="A">A</option>
                              <option value="B">B</option>
                              <option value="C">C</option>
                              <option value="D">D</option>
                            </select>
                          </div>

                          <div class="form-group">
                            <label>Fecha de finalización del Evento</label>
                            <div class="date wideForm">
                              <input type="date" class="form-control pull-right" id="datepicker" placeholder="dd/mm/aaaa" name="endDate">
                            </div>
                          </div>

                          <div class="form-group">
                            <label>Género</label>
                            <select class="form-control select2 wideForm" name="gender">
                              <option value="M">Masculino</option>
                              <option value="F">Femenino</option>
                            </select>
                          </div>

                        </div>
                      </div>

                      <div class="modal-footer label-success">
                        <button type="button" class="btn btn-success">Cancelar</button>
                        <button type="submit" class="btn btn-success">Crear Evento</button>
                      </div>
                      <!-- /.row -->
                   </form>   
                  </div>                   
                </div>      
              </div>

            <!-- Panel Tabla de Eventos -->
              <div class="col-md-6">
                <div class="box box-success">
                  <div class="box-header with-border label-success" align="center">
                    <h3 class="box-title"><b>LISTA DE EVENTOS DEPORTIVOS</b></h3>         
                  </div>

                  <div class="content">
                    <table id="example2" class="table table-bordered table-hover">
                      <thead>
                        <tr class="label-success">
                          <th>Nombre del Evento</th>
                          <th>Categoría</th>
                          <th>Fecha de Inicio</th>
                          <th>Fecha de Finalización</th>
                          <th>Tipo</th>
                          <th>Género</th>
                        </tr>
                      </thead>
                                
                      <tbody>
                        <% if (objSport) { %>
                        <% objSport.forEach(function(obj) { %>
                        <tr class="<%= obj._id %>" style="text-align:center;">
                          <td><%= obj.nameEvent %></td>
                          <td><%= obj.category %></td>
                          <td><%= obj.startDate %> </td>
                          <td><%= obj.endDate %></td>
                          <td><%= obj.typeOfParticipation %></td>
                          <td><%= obj.gender %></td>
                          
                          <td>
                            <button id="<%= obj._id %>" class="show-modify-form btn btn-warning btn-block">Editar <i class="fa fa-pencil"></i></button>
                            <input type="hidden" value="<%= obj._id %>">
                          </td>

                        </tr>
                        <% }); %>
                        <% } else { %>
                        <td colspan="" rowspan="" headers="">Para crear un usuario, dé click en el boton <span class="fa fa-plus-circle"></span></td>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                         
                </div>      
              </div>

            <!-- Panel de Modificación de Eventos -->
              <div class="col-md-6">
                <div class="box box-info">
                  <div class="box-header with-border label-info" align="center">
                    <h3 class="box-title"><b>MODIFICAR EVENTO DEPORTIVO</b></h3>          
                  </div>
                  <div class="box-body">
                     <form role="form" id="frm-modify-obj" method="POST">
                        <div class="row">
                          <div class="col-md-6">
                            
                            <div class="form-group">
                              <label for="secondNameAffiliate">Nombre del Evento</label>
                              <input class="form-control" type="text" placeholder="Nombre del Evento" id="mod_nameEvent" name="nameEvent">
                            </div>

                            <div class="form-group">
                              <label>Fecha de inicio del Evento</label>
                              <div class="date wideForm">
                                <input type="date" class="form-control pull-right" id="datepicker" placeholder="dd/mm/aaaa" id="mod_startDate" name="startDate">
                              </div>
                            </div>

                            <div class="form-group">
                              <label>Tipo de Participacion</label>
                              <select class="form-control select2 wideForm" id="mod_typeOfParticipation" name="typeOfParticipation">
                                <option value="Individual">Individual</option>
                                <option value="Grupal">Grupal</option>
                              </select>
                            </div>
                              
                          </div>

                          <div class="col-md-6">
                            <div class="form-group">
                              <label>Categoría</label>
                              <select class="form-control select2 wideForm" id="mod_category" name="category">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                              </select>
                            </div>

                            <div class="form-group">
                              <label>Fecha de finalización del Evento</label>
                              <div class="date wideForm">
                                <input type="date" class="form-control pull-right" placeholder="dd/mm/aaaa" id="mod_endDate" name="endDate">
                              </div>
                            </div>

                            <div class="form-group">
                              <label>Género</label>
                              <select class="form-control select2 wideForm" id="mod_gender" name="gender">
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                              </select>
                            </div>
                          </div>
                          
                        </div>

                        <div class="modal-footer label-info">
                          <input id="button_update" type="submit" class="modify-obj btn btn-info" value="Actualizar usuario"></input>
                          <!-- El botón cancelar se deja como input para que no haga efecto sobre el formulario -->
                          <input type="button" class="list-users btn btn-info" value="Cancelar"></input>
                        </div>
                        <!-- /.row -->
                     </form>   
                  </div>                   
                </div>      
              </div>
            
            </div>
        </section>
      </div>

      <% include ./partials/footer.ejs %>

    </div>
    <!-- ./wrapper -->

    <% include ./partials/footer-scripts.ejs %>

    <script src="js/jquerySportEvents.js" type="text/javascript" charset="utf-8"></script>

  </body>
</html>
